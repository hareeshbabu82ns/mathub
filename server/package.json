{
  "name": "mathub-api",
  "version": "0.0.4",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "node dist/index.js",
    "serve": "nodemon --exec ts-node index.ts",
    "prebuild": "yarn clean",
    "build": "tsc",
    "postbuild": "yarn copyfiles",
    "clean": "rimraf ./dist",
    "copyfiles": "copyfiles -u 1 src/**/*.html src/**/*.graphql dist/src/",
    "release": "standard-version",
    "postrelease": "git push -o ci.skip && git push origin v$npm_package_version"
  },
  "dependencies": {
    "@grapi/mongodb": "^2.2.4",
    "@grapi/server": "^2.2.4",
    "@scalars/grapi": "^2.2.5",
    "apollo-server": "^3.5.0",
    "apollo-server-express": "^3.5.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/node": "^16.11.12",
    "copyfiles": "^2.4.1",
    "nodemon": "^2.0.15",
    "rimraf": "^3.0.2",
    "standard-version": "^9.3.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.3"
  }
}
